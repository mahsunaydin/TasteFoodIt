
@{
    ViewBag.Title = "PartialReservationDefault";
    //Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-4 p-4 p-md-5 d-flex align-items-center justify-content-center bg-primary">
    <form action="#" class="appointment-form">
        <h3 class="mb-3">Masanızı Hemen Ayırtın</h3>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <input type="name" class="form-control" placeholder="Ad Soyad">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email Adresi">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Telefon">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <div class="input-wrap">
                        <div class="icon"><span class="fa fa-calendar"></span></div>
                        <input type="text" class="form-control book_date" placeholder="Rezervasyon Tarihi">
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <div class="input-wrap">
                        <div class="icon"><span class="fa fa-clock-o"></span></div>
                        <input type="text" class="form-control book_time" placeholder="Rezervasyon Saati">
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <div class="form-field">
                        <div class="select-wrap">
                            <div class="icon"><span class="fa fa-chevron-down"></span></div>
                            <select name="" id="" class="form-control">
                                <option value="" style="background-color:white; color:black;">Misafir Sayısı</option>
                                <option value="" style="background-color:white; color:black;">1</option>
                                <option value="" style="background-color:white; color:black;">2</option>
                                <option value="" style="background-color:white; color:black;">3</option>
                                <option value="" style="background-color:white; color:black;">4</option>
                                <option value="" style="background-color:white; color:black;">5</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <input type="submit" value="Rezervasyonu Yap" class="btn btn-white py-3 px-4">
                </div>
            </div>
        </div>
    </form>
</div>



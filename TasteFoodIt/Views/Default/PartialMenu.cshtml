@model List<TasteFoodIt.Entities.Product>
@{ var count = 0; var count1 = 0; var count2 = 0;}
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-2">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <span class="subheading">Eşsiz Lezzetlerimiz</span>
                <h2 class="mb-4">Menümüz</h2>
            </div>
        </div>
        <div class="row">


            <div class="col-md-6 col-lg-4">
                <div class="menu-wrap">
                    <div class="heading-menu text-center ftco-animate">
                        <h3>Sütlü Tatlılar</h3>
                    </div>
                    @foreach (var item in Model)
                    {
                        if (item.CategoryId == 2 && count < 3)
                        {
                            <div class="menus d-flex ftco-animate">
                                <div class="menu-img img" style="background-image: url(@item.ImageUrl);"></div>
                                <div class="text">
                                    <div class="d-flex">
                                        <div class="one-half">
                                            <h3>@item.ProductName</h3>
                                        </div>
                                        <div class="one-forth">
                                            <span class="price">@item.Price</span>
                                        </div>
                                    </div>
                                    <p><span>@item.Description</span></p>
                                </div>
                            </div>
                            count++;
                        }
                    }
                    <span class="flat flaticon-bread" style="left: 0;"></span>
                    <span class="flat flaticon-breakfast" style="right: 0;"></span>
                </div>
            </div>

            @* Kategorinin Devamı *@
            <div class="col-md-6 col-lg-4">
                <div class="menu-wrap">
                    <div class="heading-menu text-center ftco-animate">
                        <h3>Yiyecekler</h3>
                    </div>
                    @foreach (var item in Model)
                    {
                        if (item.CategoryId == 5 && count1 < 3)
                        {
                            <div class="menus d-flex ftco-animate">
                                <div class="menu-img img" style="background-image: url(@item.ImageUrl);"></div>
                                <div class="text">
                                    <div class="d-flex">
                                        <div class="one-half">
                                            <h3>@item.ProductName</h3>
                                        </div>
                                        <div class="one-forth">
                                            <span class="price">@item.Price</span>
                                        </div>
                                    </div>
                                    <p><span>@item.Description</span></p>
                                </div>
                            </div>
                            count1++;
                        }
                    }
                    <span class="flat flaticon-bread" style="left: 0;"></span>
                    <span class="flat flaticon-breakfast" style="right: 0;"></span>
                </div>
            </div>

            @* Kategorinin Devamı *@
            <div class="col-md-6 col-lg-4">
                <div class="menu-wrap">
                    <div class="heading-menu text-center ftco-animate">
                        <h3>Şerbetli Tatlılar</h3>
                    </div>
                    @foreach (var item in Model)
                    {
                        if (item.CategoryId == 6 && count2 <3)
                        {
                            <div class="menus d-flex ftco-animate">
                                <div class="menu-img img" style="background-image: url(@item.ImageUrl);"></div>
                                <div class="text">
                                    <div class="d-flex">
                                        <div class="one-half">
                                            <h3>@item.ProductName</h3>
                                        </div>
                                        <div class="one-forth">
                                            <span class="price">@item.Price</span>
                                        </div>
                                    </div>
                                    <p><span>@item.Description</span></p>
                                </div>
                            </div>
                            count2++;
                        }
                    }
                    <span class="flat flaticon-bread" style="left: 0;"></span>
                    <span class="flat flaticon-breakfast" style="right: 0;"></span>
                </div>
            </div>

















        </div>
    </div>

</section>

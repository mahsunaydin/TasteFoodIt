@model List<TasteFoodIt.Entities.Product>
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Ürün Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Ürünler</li>
            <li class="breadcrumb-item active" aria-current="page">Ürün İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Ürünler Tablosu</h6>
                    <a href="/Product/CreateProduct" style="margin-left:15px; margin-top:25px;" class="btn btn-primary">Yeni Ürün Girişi</a>
                </div>

                <div class="table-responsive p-3">
                    <table class="table align-items-center table-flush" id="tblx">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Ürün Kategorisi</th>
                                <th>Fiyat</th>
                                <th>Durum</th>
                                <th>Görsel</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td>@item.Price</td>
                                    @if (item.IsActive == true)
                                    {
                                        <td>
                                            <a href="#" class="btn btn-success btn-icon-split">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-check"></i>
                                                </span>
                                                <span class="text">Aktif</span>
                                            </a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <a href="#" class="btn btn-dark btn-icon-split">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-exclamation-circle"></i>
                                                </span>
                                                <span class="text">Pasif</span>
                                            </a>
                                        </td>
                                    }

                                    <td style="text-align:center;">
                                        <img src="@item.ImageUrl" style="height:100px; width:150px;" class="rounded mx-auto d-block" alt="Ürün Görseli">
                                    </td>

                                    <td>
                                        <a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-trash"></i>
                                            </span>
                                            <span class="text">Ürünü Sil</span>
                                        </a>
                                    </td>

                                    <td>
                                        <a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-warning btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-info-circle"></i>
                                            </span>
                                            <span class="text">Güncelle</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    <!--Row-->

</div>


@model List<TasteFoodIt.Entities.Address>
@{
    ViewBag.Title = "AddressList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Adres Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Ürünler</li>
            <li class="breadcrumb-item active" aria-current="page">Adres İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="table-responsive p-3">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>Telefon</th>
                                <th>Email</th>
                                <th>Açıklama</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.AddressId != 0)
                            {
                                count++;
                                <tr>
                                    <td>@count</td> <!--@ViewBag.AddressId-->
                                    <td>@ViewBag.Phone</td>
                                    <td>@ViewBag.Email</td>
                                    <td>@ViewBag.Description</td>
                                    <td>
                                        <a href="/Address/DeleteAddress/@ViewBag.AddressId" class="btn btn-danger btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-info-circle"></i>
                                            </span>
                                            <span class="text">Sil</span>
                                        </a>
                                    </td>
                                    <td><a href="/Address/UpdateAddress/@ViewBag.AddressId" class="btn btn-warning btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-info-circle"></i>
                                        </span>
                                        <span class="text">Güncelle</span>
                                        </a></td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (ViewBag.Counter < 1)
                    {
                        <a href="/Address/CreateAddress" class="btn btn-primary">Yeni Adres Girişi</a>
                    }

                </div>
            </div>
        </div>
    </div>

</div>

